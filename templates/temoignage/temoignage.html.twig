{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Témoignages
{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center">
        <div class="col-md-10 col-xl-8 text-center">
            <h3 class="mb-4">Témoignages</h3>
            <p class="mb-4 pb-2 mb-md-5 pb-md-0" style="font-size: large">
                Nous tenons à vous remercier du fond du coeur pour votre confiance et votre soutien.
                Nous sommes ravies de pouvoir travailler avec vous et de vous apporter notre assistance pour vous créer
                votre journée idéale en toute sérénité.
            </p>
        </div>
    </div>
    <div class="form-t">
        <h3 class="mb-4">Partagez nous votre experience avec la lumière du bonheur</h3>
        {{ form_start(formt) }}
        {{ form_widget(formt) }}
        <button type="submit">Envoyer</button>
        {{ form_end(formt) }}
    </div>

    <section>
        <div class="row justify-content-center">
            {% for temoignage in temoignagesValides %}
                <div class="col-md-4 mb-4">
                    <div class="card temoignage-card">
                        <div class="card-body">
                            <h5 class="card-title">{{ temoignage.nom }}</h5>
                            <p class="card-text">{{ temoignage.contenu }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
