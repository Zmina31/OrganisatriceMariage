        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('img/posters/4.jpg') }}" class="my-carousel-image" alt="Image 1">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/posters/14.jpg') }}" class="my-carousel-image" alt="Image 2">
